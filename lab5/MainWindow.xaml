<Window x:Class="lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab5"
        mc:Ignorable="d"
        Title="Movies menager" Height="600 " Width="800" MinHeight="400" MinWidth="600">
    <Window.Resources>
        <LinearGradientBrush x:Key ="windowBackground" EndPoint="1,0" StartPoint="0,1">
            <GradientStop Color="#007c04" Offset="0"/>
            <GradientStop Color=" #b2ffb4" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    <Grid  Background="{StaticResource windowBackground}">
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Menu">
                    <MenuItem Header="_Help"/>
                    <MenuItem Header="_Add movies"/>
                    <MenuItem Header="_Exit"/>
                </MenuItem>
            </Menu>
            <Canvas />

        </DockPanel>
        <TabControl x:Name="tabControl" TabStripPlacement="Right" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" Margin="0,22,-0.4,0.4" BorderThickness="4" MinWidth="6">
            <TabItem Header="View">
                <Grid Background="{StaticResource windowBackground}"/>
            </TabItem>
            <TabItem Header="Edit">
                <Grid Background="{StaticResource windowBackground}">
                    <DataGrid HorizontalAlignment="Left" Height="526" Margin="10,10,-0.4,0" VerticalAlignment="Top" Width="732" x:Name="myGrid" ItemsSource="{Binding movies}" Background="Transparent"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
